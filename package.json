{
  "name": "cc-inspect",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "cc-inspect": "./bin/cc-inspect"
  },
  "scripts": {
    "dev": "IS_LOCAL=1 bun --hot src/server/index.tsx",
    "start": "bun src/server/index.tsx",
    "build": "bun run build.ts",
    "typecheck": "tsc --noEmit",
    "fmt": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "fix": "biome check --write --unsafe --log-level=error .",
    "verify": "bun run typecheck && bun run lint && bun fmt",
    "test": "bun test"
  },
  "imports": {
    "#types": "./src/types.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "env-paths": "^4.0.0",
    "lucide-react": "^0.575.0",
    "markdown-to-jsx": "^8.0.0",
    "nuqs": "^2.8.8",
    "radix-ui": "^1.4.3",
    "react": "^19",
    "react-dom": "^19",
    "react-hotkeys-hook": "^5.2.4",
    "react-intersection-observer": "^10.0.3",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.1.11",
    "zod": "^4.1.12",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@biomejs/biome": "^2.2.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
