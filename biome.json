{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"files": {
		"includes": ["src/**/*.ts", "src/**/*.tsx"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useMaxParams": {
					"level": "error",
					"options": {
						"max": 3
					}
				}
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useAtIndex": "error",
				"noCommonJs": "error",
				"noDefaultExport": "error",
				"noInferrableTypes": "error",
				"noNonNullAssertion": "error",
				"noProcessEnv": "off",
				"useAsConstAssertion": "error"
			},
			"suspicious": {
				"noConsole": "off",
				"noFocusedTests": "error",
				"noSkippedTests": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 110,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"bracketSpacing": false
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
